<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#1976D2</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#2196F3</item>
    </style>

    <!-- Team Name text view styles -->
    <style name="teamTextViewStyle" parent="AppTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#757575</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- score text view styles -->
    <style name="scoreTextViewStyle" parent="AppTheme">
        <item name="android:textSize">56sp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="buttonViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

</resources>